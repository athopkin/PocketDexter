<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Pokedex Selection -->
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_gen_list"
        android:entryValues="@array/pref_gen_values"
        android:key="gen_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_generations" />

    <!-- Background Selection -->
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_back_list"
        android:entryValues="@array/pref_back_values"
        android:key="back_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_background" />
    
    <!-- Sort Selection -->
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_sort_list"
        android:entryValues="@array/pref_sort_values"
        android:key="sort_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_sort" />
    
    <!-- Sort Descending -->
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="descending_checkbox"
        android:summary="@string/pref_description_descending"
        android:title="@string/pref_title_descending" />
    
    <!-- Search Alt Forms -->
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="search_alts_checkbox"
        android:summary="@string/pref_description_search_alts"
        android:title="@string/pref_title_search_alts" />
    
    
</PreferenceScreen>
