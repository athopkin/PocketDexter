<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/pd_back"
    android:id="@+id/quiz"
    tools:context="pocketdexterv2.Quiz">

    <Button
        android:id="@+id/highlow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_default"
        android:onClick="highlow"
        android:text="Comparison"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/legacy"
        android:layout_below="@+id/highlow"
        android:background="@android:drawable/btn_default"
        android:onClick="legacy"
        android:text="Legacy"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/highlow"
        android:layout_alignEnd="@+id/highlow" /> />

</RelativeLayout>
